{
  "name": "create-sheriff-config",
  "version": "4.1.0",
  "type": "module",
  "description": "CLI/starter to bootstrap a Sheriff config",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx ./src/index.ts",
    "clean": "rm -rf .turbo && rm -rf dist",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0 --cache --cache-location=node_modules/.cache/.eslintcache",
    "publint": "publint",
    "typesync": "typesync --dry=fail"
  },
  "license": "MIT",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": "esm",
    "splitting": false,
    "sourcemap": false,
    "clean": true
  },
  "dependencies": {
    "cli-highlight": "^2.1.11",
    "commander": "^9.4.1",
    "consola": "^3.2.3",
    "detect-package-manager": "^3.0.1",
    "find-up": "^6.3.0",
    "lodash-es": "^4.17.21",
    "ora": "^6.1.2",
    "prompts": "^2.4.2",
    "read-pkg-up": "9.1.0",
    "typescript": "^5.3.3",
    "winston": "^3.8.2",
    "winston-console-format": "^1.0.8",
    "yargs": "^17.7.2"
  },
  "bin": {
    "create-sheriff-config": "./dist/index.js"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.6",
    "@types/prompts": "^2.4.2",
    "@types/yargs": "^17.0.32",
    "eslint": "^8.56.0",
    "eslint-config-sheriff": "workspace:*",
    "eslint-define-config": "^2.1.0",
    "publint": "^0.2.7",
    "tsconfig": "workspace:*",
    "tsup": "^6.2.3",
    "tsx": "^4.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AndreaPontrandolfo/sheriff.git",
    "directory": "packages/create-sheriff-config"
  },
  "author": {
    "name": "Andrea Pontrandolfo",
    "email": "andrea.pontra@gmail.com",
    "url": "https://github.com/AndreaPontrandolfo"
  },
  "keywords": [
    "javascript",
    "eslint",
    "prettier",
    "cli",
    "generator",
    "scaffolding",
    "starter"
  ],
  "homepage": "https://www.eslint-config-sheriff.dev",
  "bug": "https://github.com/AndreaPontrandolfo/sheriff/labels/bug",
  "publishConfig": {
    "access": "public"
  }
}

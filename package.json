{
  "name": "sheriff-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@turbo/gen": "^1.9.7",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.10",
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "typescript"
      ],
      "ignoreMissing": [
        "vitest"
      ]
    }
  }
}

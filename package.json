{
  "name": "sheriff-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start:rulesgen": "turbo run start --filter=@sheriff/utils",
    "start:docs": "turbo run start --filter=docs-website",
    "rulesgen": "turbo run rulesgen --filter=@sheriff/utils",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publint": "turbo run publint --concurrency=1",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@turbo/gen": "^1.9.7",
    "prettier": "^2.5.1",
    "turbo": "^1.10.12"
  },
  "packageManager": "pnpm@8.6.10",
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "typescript"
      ],
      "ignoreMissing": [
        "vitest"
      ]
    }
  }
}

{
  "$schema": "./node_modules/turbo/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:watch": {
      "cache": false,
      "persistent": true,
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^topo", "^build"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "lint": {
      "dependsOn": ["^topo", "^build"]
    },
    "eslint-config-sheriff#lint": {
      "dependsOn": ["^topo", "build"]
    },
    "validate-config": {
      "dependsOn": ["^topo", "^build"]
    },
    "//#manypkg": {
      "inputs": ["**/package.json"]
    },
    "//#knip": {},
    "//#typesync": {
      "inputs": ["**/package.json"]
    },
    "clean": {
      "cache": false
    },
    "serve": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "//#format": {
      "outputs": ["node_modules/.cache/.prettiercache"]
    },
    "//#format:check": {
      "outputs": ["node_modules/.cache/.prettiercache"]
    }
  }
}
